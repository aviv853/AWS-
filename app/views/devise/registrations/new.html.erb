<div class="container home-sign_up-links">
  <div class="row">
    <div class="col-md-6">
      <div class="well">
        <h1 class="text-center"> Join us maybe?</h1>

        <br/>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="field form-group">
                <%= f.text_field :email, placeholder: "Username", autofocus: true, class: 'form-control' %>
              </div>
            </div>
            <div class="col-md-8">
              <div class="field form-group">
                <!-- <%= f.label :email %><br /> -->
                <%= f.email_field :email, placeholder: "Email address", autofocus: true, class: 'form-control' %>
                  
              </div>
            </div>
            <div class="col-md-4">
              <div class="field form-group">
                 <%= f.text_field :phone_number, placeholder: "Phone number", class: 'form-control' %>
              </div>
            </div>
          </div>
          
          <div class="row align-items-center">
            <div class="col-md-6">
              <div class="field form-group">
              <!--  <%= f.label :password %> -->
                <% if @minimum_password_length %>
              <!--  <em>(<%= @minimum_password_length %> characters minimum)</em> -->
                <% end %>
                <%= f.password_field :password, placeholder: "Password (6 characters minimum)", autocomplete: "off", class: 'form-control' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="field form-group">
              <!--  <%= f.label :password_confirmation %><br /> -->
                <%= f.password_field :password_confirmation, placeholder: "Confirm password", autocomplete: "off", class: 'form-control'  %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="actions  form-group">
                <%= f.submit "Sign up with Basic plan", plan: @basic_plan, class: 'btn btn-primary btn-lg btn-block'%>
              </div>
            </div>
            <div class="col-md-6">
              <%= link_to "Sign up with Pro plan", new_user_registration_path(plan: @pro_plan), class: 'btn btn-success btn-lg btn-block'%>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>